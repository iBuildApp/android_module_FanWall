<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ibuildapp.romanblack.FanWallPlugin">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application>
        <activity android:name="FanWallPlugin"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN"/>-->
                <!--<category android:name="android.intent.category.LAUNCHER"/>-->
            <!--</intent-filter>-->
        </activity>
        <activity android:name="AuthorizationActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name="EMailAuthorizationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="EMailSignUpActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name="MessageView"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden"/>
        <activity android:name="ImageViewActivity"
            android:configChanges="orientation"/>
        <activity android:name="SendMessageActivity"
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:screenOrientation="portrait"
            android:configChanges="keyboard"/>
        <activity android:name="CameraActivity"/>
        <activity android:name="ProfileViewActivity"
            android:screenOrientation="portrait"/>

        <activity android:name="FanWallMapActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="FanWallPhotoListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="SharingActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
