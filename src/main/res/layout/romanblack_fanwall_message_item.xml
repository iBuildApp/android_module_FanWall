<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:orientation="vertical"
              android:paddingTop="5dp"
              android:paddingRight="5dp"
              android:paddingBottom="5dp"
              android:paddingLeft="18dp">

    <LinearLayout android:layout_height="77dp"
                  android:layout_width="fill_parent"
                  android:orientation="horizontal"
                  android:background="@drawable/romanblack_fanwall_grey_bubble_top"
                  android:paddingTop="11dp"
                  android:paddingLeft="11dp"
                  android:paddingRight="23dp"
                  android:paddingBottom="8dp">

        <ImageView android:id="@+id/romanblack_fanwall_messageitem_avatar"
                   android:layout_height="55dp"
                   android:layout_width="55dp"
                   android:src="@drawable/fanwall_avatar_placeholder"/>

        <LinearLayout android:layout_height="55dp"
                      android:layout_width="wrap_content"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:layout_marginLeft="10dp">

            <TextView android:id="@+id/romanblack_fanwall_messageitem_name"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:lines="1"
                      android:textColor="#363b41"
                      android:textSize="19dp"
                      android:textStyle="bold"/>

            <TextView android:id="@+id/romanblack_fanwall_messageitem_date"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:lines="1"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/romanblack_fanwall_comments_counter_layout"
                      android:layout_height="30dp"
                      android:layout_width="30dp"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:background="@drawable/romanblack_fanwall_comments_counter"
                      android:paddingLeft="2dp"
                      android:paddingTop="1dp"
                      android:paddingRight="1dp"
                      android:paddingBottom="8dp">

            <TextView android:id="@+id/romanblack_fanwall_messageitem_commentscount"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:textColor="#ffffff"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:background="@drawable/romanblack_fanwall_grey_bubble_bottom"
                  android:paddingTop="3dp"
                  android:paddingLeft="11dp"
                  android:paddingRight="23dp"
                  android:paddingBottom="7dp">

        <ImageView android:id="@+id/romanblack_fanwall_messageitem_msgimage"
                   android:layout_height="150dp"
                   android:layout_width="150dp"
                   android:padding="5dp"
                   android:background="#ffffff"/>

        <TextView android:id="@+id/romanblack_fanwall_messageitem_text"
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:gravity="left"
                  android:textSize="17dp"
                  android:textColor="#363b41"/>

    </LinearLayout>

</LinearLayout>
